<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

  <h4>Im√°genes grupales en ciclos variant</h4>
    <% product.imagenes.count.times do |i| %>
    <%= image_tag product.imagenes[i].variant(resize_to_limit: [100, 100]) %>
  <% end %>

</div>
